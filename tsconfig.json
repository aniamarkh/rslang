{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2017",
        "removeComments": true,
        "sourceMap": true,
        "outDir": "./bundle",
        "noImplicitAny": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
    },
    "pretty": true,
    "include": ["src/**/*", "index.d.ts"],
    "exclude": [ "**/*.spec.ts"]
}
